<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab5.UI.Pages.MainPage"
             xmlns:viewmodel="clr-namespace:Lab5.UI.ViewModels"
             x:DataType="viewmodel:MainViewModel"
             Title="MainPage">

    <VerticalStackLayout Margin="150">
        <Label 
            Text="Welcome :,("
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Large"
            Margin="0,0,0,30"/>
        <Button Text="Add sushi set"
                HeightRequest="20"
                WidthRequest="300"
                Command="{Binding GoToAddSushiSetCommand}"/>
        <Button Text="Add sushi"
                HeightRequest="20"
                WidthRequest="300"
                Command="{Binding GoToAddSushiCommand}"/>
    </VerticalStackLayout>
</ContentPage>